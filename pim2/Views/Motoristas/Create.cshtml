@model pim2.Models.Motorista

@{
    ViewData["Title"] = "Create";
}

<div class="header-views">

    <h1 class="title-font">Controle de Motoristas</h1>

    <nav class="header-nav">
        <ul class="header-nav-menu">
            <li class="header-menu-item"><a asp-action="Index" class="header-btn-portal">Voltar</a></li>
        </ul>
    </nav>
</div>

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CPF" class="control-label"></label>
                            <input asp-for="CPF" class="form-control mask-cpf" />
                            @if (ViewBag.Cpf != null)
                            {
                                <span class="bg-danger" style="padding: 10px; display:block; padding: 5px; border-radius: 10px; font-weight:bold; margin-top:3px; text-transform:uppercase;"> 
                                    @ViewBag.Cpf</span>
                            }
                            <span asp-validation-for="CPF" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="Nome" class="control-label"></label>
                            <input asp-for="Nome" class="form-control" />
                            <span asp-validation-for="Nome" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="CNH" class="control-label"></label>
                            <input asp-for="CNH" class="form-control" />
                            <span asp-validation-for="CNH" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Categoria_Cnh" class="control-label"></label>
                            <input asp-for="Categoria_Cnh" class="form-control" />
                            <span asp-validation-for="Categoria_Cnh" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Dt_Nascimento" class="control-label"></label>
                            <input asp-for="Dt_Nascimento" class="form-control" />
                            <span asp-validation-for="Dt_Nascimento" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-2">
                        <div class="form-group">
                            <label asp-for="Exame_medico" class="control-label"></label>
                            <input asp-for="Exame_medico" class="form-control" />
                            <span asp-validation-for="Exame_medico" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="email" class="control-label"></label>
                            <input asp-for="email" class="form-control" />
                            <span asp-validation-for="email" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-8">
                        <div class="form-group">
                            <label asp-for="endereco" class="control-label"></label>
                            <input asp-for="endereco" class="form-control" />
                            <span asp-validation-for="endereco" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-1">
                        <div class="form-group">
                            <label asp-for="numero" class="control-label"></label>
                            <input asp-for="numero" class="form-control" />
                            <span asp-validation-for="numero" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-3">
                        <div class="form-group">
                            <label asp-for="Bairro" class="control-label"></label>
                            <input asp-for="Bairro" class="form-control" />
                            <span asp-validation-for="Bairro" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-6">
                        <div class="form-group">
                            <label asp-for="cidade" class="control-label"></label>
                            <input asp-for="cidade" class="form-control" />
                            <span asp-validation-for="cidade" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label asp-for="CEP" class="control-label"></label>
                            <input asp-for="CEP" class="form-control" />
                            <span asp-validation-for="CEP" class="text-danger"></span>
                        </div>
                    </div>
                </div>
                <div style="text-align:center">
                    @if (ViewBag.Erro != null)
                    {
                        <h3 style="color: white; background-color: red; padding:10px; border-radius: 10px;">
                            @ViewBag.Erro
                        </h3>
                    }
                </div>
                <div class="form-group">
                    <input type="submit" value="Cadastrar" class="btn btn-success col-md-offset-11" />
                </div>
            </form>
        </div>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
