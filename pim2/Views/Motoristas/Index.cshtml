@model IEnumerable<pim2.Models.Motorista>

@{
    ViewData["Title"] = "Index";
}

<link href="~/css/style.css" rel="stylesheet" />
<!-- HEADER -->
<div class="header-views">

    <h1 class="title-font">Controle de Motoristas</h1>

    <nav class="header-nav">
        <ul class="header-nav-menu">
            <li class="header-menu-item"><a asp-action="UserPage" class="header-btn-portal">Inicio</a></li>
            <li class="header-menu-item"><a asp-action="Create" class="header-btn-portal">Cadastrar motorista</a></li>
        </ul>
    </nav>
</div>
@using (Html.BeginForm("Index", "Motoristas", FormMethod.Get))
{
<div class="container-fluid">
    <div style="width:auto">
        <div class="form-inline">
            <input id="cpf" type="text" name="cpf" value="" placeholder="Digite um CPF válido" class="form-control mask-cpf" maxlength="14" />
            <input type="submit" value="Filtar" class="btn btn-success" />
            @if (@ViewBag.Todos == 1)
            {
                <input type="submit" value="Todos" class="btn btn-primary" />
            }
        </div>
            @if (ViewBag.CPF != null)
            {
                <span class="bg-danger" style="padding: 10px; display:block; padding: 5px; border-radius: 10px; font-weight:bold; margin-top:3px; text-transform:uppercase; width:auto; text-align:center">
                    @ViewBag.CPF
                </span>
            }
        
    </div>
</div>
    <br />
}
<div class="container-fluid">
    <table class="table table-responsive table-striped">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CPF)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Nome)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CNH)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Categoria_Cnh)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Dt_Nascimento)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Exame_medico)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.endereco)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.numero)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.cidade)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Bairro)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.CEP)
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.CPF)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CNH)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Categoria_Cnh)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Dt_Nascimento)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Exame_medico)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.endereco)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.numero)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.cidade)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Bairro)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CEP)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-default btn-gold"><i class="glyphicon glyphicon-pencil"></i></a> |
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger"><i class="glyphicon glyphicon-trash"></i></a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
